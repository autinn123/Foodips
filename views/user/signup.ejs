<section id="signup">
  <div class="container main">
    <h1 class="text-center">Sign Up</h1>
    <hr />
    <div class="signup-form">
      <%- include ("../partials/messages"); %>
      <form action="/user/sign-up" method="post">
        <div class="form-group row">
          <div class="col-md-6">
            <label>First Name</label>
            <input
              type="text"
              class="form-control"
              name="firstName"
              placeholder="First"
              value="<%= typeof firstName != 'undefined' ? firstName : '' %>"
            />
          </div>
          <div class="col-md-6">
            <label>Last Name</label>
            <input
              type="text"
              class="form-control"
              name="lastName"
              placeholder="Last"
              value="<%= typeof lastName != 'undefined' ? lastName : '' %>"
            />
          </div>
        </div>
        <div class="form-group">
          <label>Phone Number</label>
          <input
            type="text"
            class="form-control"
            name="phoneNumber"
            placeholder="084943212"
            value="<%= typeof phoneNumber != 'undefined' ? phoneNumber : '' %>"
          />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="example@gmail.com"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label>Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            placeholder="********"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label>Confirm Password</label>
          <input
            type="password"
            class="form-control"
            name="confirmPassword"
            placeholder="********"
            value="<%= typeof confirmPassword != 'undefined' ? confirmPassword : '' %>"
          />
        </div>
        <div class="form-group text-center">
          <button type="submit" class="btn-update">Sign Up</button>
        </div>
        <p>You've had an account? Click <a href="/signin">here</a> to log in</p>
      </form>
    </div>
  </div>
</section>
