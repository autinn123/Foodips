<h2> </h2>
<div class="row">
  <div class="col-75">
    <div class="container">
      <form action="/checkout" id="checkout-form" method="post">
        <div class="row">
          <div class="col-50">
            <h3>Billing Address</h3>
            <%- include ("../partials/messages"); %>
            <label class="cTitle" for="fname"><i class="fa fa-user"></i> Full Name</label>
            <input type="text" id="fname" 
              name="firstname" placeholder="John M. Doe" 
              value="<%= typeof firstname != 'undefined' ? firstname : '' %>">
            <label class="cTitle" for="email"><i class="fa fa-envelope"></i> Email</label>
            <input type="text" id="email" 
              name="email" placeholder="john@example.com" 
              value="<%= typeof email != 'undefined' ? email : '' %>">
            <label class="cTitle" for="adr"><i class="fa fa-address-card-o"></i> Address</label>
            <input type="text" id="adr" 
              name="address" placeholder="542 W. 15th Street" 
              value="<%= typeof address != 'undefined' ? address : '' %>">
            <label class="cTitle" for="phone"><i class="fa fa-institution"></i> Phone Number</label>
            <input type="text" id="phone" 
              name="phone" placeholder="1234567890" 
              value="<%= typeof phone != 'undefined' ? phone : '' %>">

          </div>
          
        </div>
        <input type="submit" id="checkoutBtn" value="Continue to checkout" class="btn">
      </form>
    </div>    
  </div>
  <div class="col-25">
    <div class="container">
      <h4>Cart <span class="price" style="color:black"><i class="fa fa-shopping-cart"></i> </span></h4>
      <% products.forEach(product => { %>
      <p><a href="#"><%= product.item.name %>   x<%= product.qty %></a> <span class="price">$<%= product.item.price*product.qty %></span></p>
      <% }) %>
      <hr>
      <p>Total <span class="price" style="color:black"><b>$<%= totalPrice %></b></span></p>
    </div>
  </div>
</div>







